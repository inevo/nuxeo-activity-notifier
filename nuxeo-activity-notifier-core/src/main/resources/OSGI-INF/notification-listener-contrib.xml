<?xml version="1.0"?>
<component name="org.nuxeo.ecm.activity.notifier.listener" version="1.0.0">

  <extension target="org.nuxeo.ecm.core.event.EventServiceComponent" point="listener">

    <listener name="notificationListener" async="true"
      class="org.nuxeo.ecm.activity.notifier.listener.NotifierEventListener">
      <event>activityAdded</event>
      <event>activityRemoved</event>
      <event>activityReplyAdded</event>
      <event>activityReplyRemoved</event>
    </listener>

  </extension>

</component>
